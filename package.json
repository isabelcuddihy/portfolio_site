{
  "name": "personal_portfolio",
  "version": "1.0.0",
  "description": "Portfolio website for Isabel Cuddihy",
  "main": "index.html",
  "scripts": {
    "build": "npm run build-css && npm run build-js && npm run build-html",
    "build-css": "npx postcss styles.css -o dist/styles.css",
    "build-js": "webpack --mode production",
    "build-html": "cp index.html dist/index.html", 
    "predeploy": "npm run build",
    "deploy": "amplify publish"
  },
  "author": "Isabel Cuddihy",
  "license": "MIT",
  "dependencies": {
    "live-server": "^1.2.0"
  },
  "devDependencies": {
    "postcss": "^8.4.39",
    "webpack": "^5.65.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/isabelcuddihy/portfolio_site"
  }
}
